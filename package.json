{
  "name": "shop",
  "version": "1.0.0",
  "description": "MERN farmer's market shop app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index",
    "server": "nodemon server/index",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akshaypatel99/farmersmarket.git"
  },
  "author": "Abhiram Chowdary Y",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akshaypatel99/farmersmarket/issues"
  },
  "homepage": "https://github.com/akshaypatel99/farmersmarket#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
